<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditPlanFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/plan_title"
            android:layout_width="190dp"
            android:layout_height="39dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021" />

        <Button
            android:id="@+id/pin_msg_btn"
            android:layout_width="101dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/green"
            android:text="@string/pin_msg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.891"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_pin_msg"
            app:layout_constraintVertical_bias="0.016" />

        <EditText
            android:id="@+id/et_pin_msg"
            android:layout_width="343dp"
            android:layout_height="46dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Texto para anclar"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="276dp"
            android:layout_height="26dp"
            android:text="@string/pin_msg_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plan_title"
            app:layout_constraintVertical_bias="0.01" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="263dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/survey_add_title"
            app:layout_constraintVertical_bias="0.021" />

        <TextView
            android:id="@+id/survey_add_title"
            android:layout_width="236dp"
            android:layout_height="20dp"
            android:text="@string/create_date_survey_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pin_msg_btn"
            app:layout_constraintVertical_bias="0.075" />

        <ImageButton
            android:id="@+id/btn_add_date"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/green"
            android:src="@android:drawable/ic_menu_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.406"
            app:layout_constraintStart_toEndOf="@+id/editTextDate"
            app:layout_constraintTop_toBottomOf="@+id/survey_add_title"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btn_crear_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:text="@string/create_date_survey_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.891"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate"
            app:layout_constraintVertical_bias="0.035" />

        <ListView
            android:id="@+id/oncreate_survey_list"
            android:layout_width="238dp"
            android:layout_height="116dp"
            android:layout_marginTop="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.217"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/ibPinPhoto"
            android:layout_width="58dp"
            android:layout_height="61dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:background="@color/green"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oncreate_survey_list"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvPinImg"
            android:layout_width="201dp"
            android:layout_height="61dp"
            android:gravity="center"
            android:text="@string/pin_image_to_plan"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toEndOf="@+id/ibPinPhoto"
            app:layout_constraintTop_toBottomOf="@+id/oncreate_survey_list"
            app:layout_constraintVertical_bias="0.135" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>